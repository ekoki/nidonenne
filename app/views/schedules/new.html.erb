<div class="h-screen w-screen flex justify-center items-center">
  <div>
    <div class="text-center">
      <h2 class="text-3xl font-bold">通知設定</h2>
    </div>
    <div>
       <%= form_with model: @schedule, local: true do |f| %>
        <div>
          <%= f.label '開始日付', User.human_attribute_name(:name) %>
          <%= f.date_field :start_date, class: 'w-full p-2 border border-indigo-600' %>
        </div>
        <div>
          <%= f.label '終了日付', User.human_attribute_name(:name) %>
          <%= f.date_field :end_date, class: 'w-full p-2 border border-indigo-600' %>
        </div>
        <div>
          <%= f.label '設定時間', User.human_attribute_name(:name) %>
          <%= f.datetime_field :time, class: 'w-full p-2 border border-indigo-600' %> 
        </div> 
        <div>
          <%= f.submit t('defaults.register'), class: 'mt-1.5 btn btn-primary py-1 px-8' %>
        </div>
       <% end %>
    </div>
  </div>
</div>


<%= f.datetime_field :start_time, class: 'input input-bordered' %>