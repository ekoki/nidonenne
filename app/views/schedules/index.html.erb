<div class="h-screen w-screen flex justify-center items-center">
  <div class="text-center">
    <%= month_calendar evens: @events do |date, events| %>
      <%= date.day %>
      <% events.each do |event| %>
        <div>
          <%= event.name %>
        </div>
      <% end %>
    <% end %>
    <div class="text-left">
      <%= link_to '解答画面へ', new_answer_form_path %>
    </div>
  </div>
</div>
