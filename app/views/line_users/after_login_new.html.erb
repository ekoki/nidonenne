<% set_meta_tags title: t('.title') %>
<div class="h-screen w-screen flex justify-center items-center bg-gray-100">
  <div class="bg-white px-12 py-12 rounded-3xl border-2">
    <div class="text-center">
      <h2 class="text-3xl font-bold">ログイン</h2>
    </div>
    <div>
      <%= form_with url: line_users_after_login_path, local: true do |f| %>
        <div>
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.email_field :email, class: 'w-full p-2 border border-black rounded-md' %>
        </div>
        <div>
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'w-full p-2 border border-black rounded-md' %>
        </div>
        <%= f.hidden_field :link_token, value: '@link_token' %> 
        <div>
          <%= f.submit t('defaults.login'), class: 'mt-1.5 btn btn-primary py-1 px-8' %>
        </div>
      <% end %>
    </div>
  </div>
</div>