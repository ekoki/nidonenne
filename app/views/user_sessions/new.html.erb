<div class="h-screen w-screen flex justify-center items-center">
  <div>
    <div class="text-center">
      <h2 class="text-3xl font-bold">ログイン</h2>
    </div>
    <div>
      <%= form_with url: login_path, local: true do |f| %>
        <div>
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.email_field :email, class: 'w-full p-2 border border-indigo-600' %>
        </div>
        <div>
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'w-full p-2 border border-indigo-600' %>
        </div>
        <div>
          <%= f.label :password_confirmation, User.human_attribute_name(:password_confirmation) %>
          <%= f.password_field :password_confirmation, class: 'w-full p-2 border border-indigo-600' %>
        </div>
        <div>
          <%= f.submit t('defaults.login'), class: 'mt-1.5 btn btn-primary py-1 px-8' %>
        </div>
      <% end %>
    </div>
    <div class="text-center, mt-3">
      <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
    </div>
  </div>
