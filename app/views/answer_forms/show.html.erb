<div class="h-auto w-auto flex justify-center items-center">
  <div class="w-1/3 h-2/3 shadow-lg rounded-3xl p-8 bg-cyan-200 border border-black mt-32 mb-32">
    <div class="text-center">
      <h2 class="text-3xl font-bold">解答ページ</h2>
    </div>
    <div>
      <%= form_with model: @answer_forms, local: true do |f| %>
        <% @questions.each_with_index do |question, i| %>
          <div class="flex">
            <%= "問題#{i+1}: #{question.question}" %>
          </div>
          <div>
            <%= f.text_field :answer, class: 'w-full p-2 border border-indigo-600' %>
          </div>
      <% end %>  
        <div>
          <%= f.submit t('defaults.answer'), class: 'mt-1.5 btn btn-primary py-1 px-8' %>
        </div>
      <% end %>
    </div>
  </div>
</div>